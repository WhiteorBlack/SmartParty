<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.qiantang.smartparty.module.assistant.viewmodel.ActivityDetialViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_common" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:orientation="horizontal"
            android:visibility="@{viewModel.isInput?View.GONE:View.VISIBLE}">

            <LinearLayout
                android:id="@+id/ll_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/input_layout_box"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:background="@mipmap/ic_launcher" />

                <TextView
                    style="@style/red30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19px"
                    android:text="评论" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_join"
                style="@style/white30"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/paleRed"
                android:gravity="center"
                android:onClick="onClick"
                android:text="报名" />
        </LinearLayout>

        <include
            android:id="@+id/input"
            layout="@layout/view_input_box"
            android:visibility="@{viewModel.isInput?View.VISIBLE:View.GONE}" />
    </LinearLayout>
</layout>