<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <import type="com.qiantang.smartparty.utils.AppUtil" />

        <import type="com.qiantang.smartparty.utils.StringUtil" />

        <import type="com.qiantang.smartparty.R" />

        <variable
            name="viewModel"
            type="com.qiantang.smartparty.module.index.viewmodel.TestRecordViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolBarSizeHeight"
            android:background="@color/barColor">

            <ImageButton
                style="@style/ToolbarBackBtnWhiteStyle"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/back_black" />

            <TextView
                style="@style/toolbarTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="答题记录" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_bar"
            android:background="@color/lineDark"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="30px"
            android:paddingLeft="32px"
            android:paddingTop="30px">

            <ImageView
                android:id="@+id/iv_statue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@{viewModel.isCorrect?AppUtil.getDrawable(R.mipmap.test_selected_green):AppUtil.getDrawable(R.mipmap.test_selected_wrong)}" />

            <TextView
                style="@style/black28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17px"
                android:text="@{StringUtil.getTestResultString(viewModel.isCorrect)}"
                />
        </LinearLayout>

        <com.qiantang.smartparty.widget.NoScrollRecycleView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_result"
            android:layout_marginBottom="200px"
            android:layout_marginTop="38px" />

        <Button
            style="@style/confirmBtn"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70px"
            android:onClick="onClick"
            android:text="@{viewModel.buttonText}" />
    </RelativeLayout>
</layout>