<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.qiantang.smartparty.module.login.viewmodel.RegisterViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="123px"
            android:background="@mipmap/icon_reigster_top"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_top"
            android:layout_marginLeft="54px"
            android:layout_marginTop="212px"
            android:background="@mipmap/icon_login_phone" />

        <View
            android:id="@+id/line"
            android:layout_width="1px"
            android:layout_height="37px"
            android:layout_below="@+id/iv_top"
            android:layout_marginLeft="24px"
            android:layout_marginTop="208px"
            android:layout_toRightOf="@+id/iv_phone"
            android:background="@color/line" />

        <EditText
            android:id="@+id/et_phone"
            style="@style/black32"
            android:layout_width="400px"
            android:layout_height="66px"
            android:layout_below="@+id/iv_top"
            android:layout_marginLeft="25px"
            android:layout_marginTop="200px"
            android:layout_toRightOf="@+id/line"
            android:background="@null"
            android:gravity="left|top"
            android:hint="请输入手机号"
            android:inputType="number"
            android:paddingTop="208px"
            android:text="@={viewModel.account}" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/et_phone"
            android:layout_marginLeft="35px"
            android:layout_marginRight="35px"
            android:background="@color/line" />

        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginLeft="54px"
            android:layout_marginTop="80px"
            android:background="@mipmap/icon_login_lock" />

        <View
            android:id="@+id/line2"
            android:layout_width="1px"
            android:layout_height="37px"
            android:layout_below="@+id/line1"
            android:layout_marginLeft="24px"
            android:layout_marginTop="75px"
            android:layout_toRightOf="@+id/iv_code"
            android:background="@color/line" />

        <EditText
            android:id="@+id/et_code"
            style="@style/black32"
            android:layout_width="300px"
            android:layout_height="66px"
            android:layout_below="@+id/line1"
            android:layout_marginLeft="25px"
            android:layout_marginTop="65px"
            android:layout_toRightOf="@+id/line2"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:text="@={viewModel.smsCode}" />

        <TextView
            android:id="@+id/tv_count"
            style="@style/red30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/et_code"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:onClick="onClick"
            android:text="@{viewModel.msg}" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/et_code"
            android:layout_marginLeft="35px"
            android:layout_marginRight="35px"
            android:background="@color/line" />

        <Button
            style="@style/confirmBtn"
            android:layout_width="520px"
            android:layout_below="@+id/line3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80px"
            android:text="下一步" />


    </RelativeLayout>
</layout>