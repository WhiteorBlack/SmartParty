<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <data>


        <variable
            name="viewModel"
            type="com.qiantang.smartparty.module.mine.viewmodel.ChangeAvatarViewModel" />

    </data>

    <LinearLayout
        android:id="@+id/drag_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_common" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_show"
                android:layout_width="match_parent"
                android:layout_height="768px"
                android:layout_gravity="center"
                bind:avatar="@{viewModel.url}"
                fresco:fadeDuration="100"
                fresco:placeholderImage="@mipmap/mine_head"
                fresco:placeholderImageScaleType="centerInside" />
        </FrameLayout>
    </LinearLayout>
</layout>