<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <corners android:radius="20px" />
            <padding
                android:bottom="1px"
                android:left="1px"
                android:right="1px"
                android:top="1px" />
            <solid android:color="#fdf6f6" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="20px" />
            <padding
                android:bottom="2px"
                android:left="2px"
                android:right="2px"
                android:top="2px" />
            <solid android:color="#fdf1f1" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="20px" />
            <padding
                android:bottom="3px"
                android:left="3px"
                android:right="3px"
                android:top="2px" />
            <solid android:color="#fcefef" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="20px" />
            <padding
                android:bottom="4px"
                android:left="4px"
                android:right="4px"
                android:top="2px" />
            <solid android:color="#fbecec" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="20px" />
        </shape>
    </item>
</layer-list>