<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="noneTextStyle">
        <item name="android:textSize">27px</item>
        <item name="android:textColor">#afb4c1</item>
    </style>

    <!-- 底部文字 -->
    <style name="BbsFootTextStyle">
        <item name="android:textSize">22px</item>
        <item name="android:textColor">#9197a6</item>
    </style>

    <!-- 底部条 -->
    <style name="BbsFootViewStyle">
        <item name="android:background">@color/main_bg</item>
        <item name="android:layout_height">15px</item>
    </style>

    <style name="toolbarTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32px</item>
    </style>

    <style name="BannerDefaultStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300px</item>
        <item name="android:layout_marginTop">0dp</item>
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">true</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">5000</item>
        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">#00aaaaaa</item>
        <!-- 指示点背景 -->
        <item name="banner_pointDrawable">@drawable/select_point</item>
        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">@dimen/sideMargin</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">5px</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">-5px</item>
        <!-- 指示器的位置 -->
        <item name="banner_indicatorGravity">bottom|center_horizontal</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">1000</item>
        <!-- 提示文案的文字大小 -->
        <item name="banner_tipTextSize">0sp</item>
        <!-- 提示文案的文字颜色 -->
        <item name="banner_tipTextColor">@android:color/white</item>
        <!-- 加载网络数据时覆盖在BGABanner最上层的占位图 -->
    </style>
</resources>
